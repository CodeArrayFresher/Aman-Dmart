            <th scope="col">Total Amount</th>
            <th scope="col"><button class="btn btn-success float-end" type="button" onclick="addrow()">Add</button></th>
        </tr>


    </table>
   
    <div class="form-group">
        <div class="btn-lg">
            <button class="btn btn-success btn-lg"
